---
const { page } = Astro.props;
---
<header>
    <div class="navbar">
            <a href="/"><img src="/immagini/completelogonew.png" alt="elena-zen-logo"></a>
        <nav>
            <div id="menucont">
                <ul id="menu">
                    <span style="word-spacing: normal;"><a href="/#aboutme">Chi sono</a></span>
                    <a href="/#services">Servizi</a>
                    <a href="/portfolio">Portfolio</a>
                    <a href="/#contacts">Contatti</a>
                </ul>
                <a class="desktop" href={page === 'portfolio' ? '/en/portfolio' : page === 'privacy' ? '/en/privacy' : '/en'}><span class="icon-park--international desktop"></span></a>
            </div>
            <div class="mobilebtn">
                <label class="ham" for="ham">
                    <input type="checkbox" id="ham" onclick="show()">
                    <span class="line line1"></span>
                    <span class="line line2"></span>
                    <span class="line line3"></span>
                </label>
                <a href={page === 'portfolio' ? '/en/portfolio' : '/en'} class="mobile"><span class="icon-park--international mobile fix"></span></a>
            </div>
        </nav>
    </div>
</header>